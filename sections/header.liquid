    <li class="px-xl-3 px-2 py-3 py-lg-0">
      <a class="text-decoration-none text-uppercase font-semibold d-block" href="{{ link.url }}">{{ link.title}}</a>
    </li>
    {% endfor %}
  </ul>
  <ul class="d-lg-flex px-3 col-lg-5 px-lg-0 d-none- order-sm-4 order-lg-3 nav-bar-items pb-md-3 pb-lg-0">
    {% for link in linklists[section.settings.nav_right].links %}
    <li class="px-xl-3 px-2 py-3 py-lg-0">
      <a class="text-decoration-none text-uppercase font-semibold d-block" href="{{ link.url }}">{{ link.title}}</a>
    </li>
    {% endfor %}
  </ul>
  <ul class="d-md-flex pr-3 px-3 px-md-0 order-md-2 order-lg-3 order-5 nav-bar-items-last align-items-center justify-content-end nav-last pb-3 pb-md-0">
