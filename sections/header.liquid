    <li class="px-xl-3 px-2 py-3 py-lg-0"><a class="nav-button text-decoration-none text-uppercase font-semibold d-inline-block" href="{{ section.settings.button_link }}">{{ section.settings.button }}</a></li>
  </ul>
</nav>
{% schema %}
  {
    "name": "header",
    "settings": [
		{
			"type":"link_list",
			"id":"nav_left",
			"label":"navigation"
		},
  		{
  			"type":"image_picker",
  			"id":"logo_image",
  			"label":"logo"
  		},
  		{
  			"type":"range",
  			"id":"logo_width",
  			"min":100,
  			"max":400,
  			"step":50,
  			"unit":"px",
  			"label":"logo width",
  			"default":200
  		},
  		{
  			"type":"url",
  			"id":"logo_link",
  			"label":"logo link"
  		},
  		{
			"type":"link_list",
			"id":"nav_right",
			"label":"navigation"
		},
		{
			"type":"text",
			"id":"login",
			"label":"login text"
		},
		{
			"type":"url",
			"id":"login_link",
			"label":"login link"
		},
		{	
			"type":"text",
			"id":"button",
			"label":"button text"
		},
		{
			"type":"url",
			"id":"button_link",
			"label":"button link"
		}
	]
  }
{% endschema %}

