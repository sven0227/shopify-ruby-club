    <svg class="d-block hamburger-menu" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
    <svg class="d-none hamburger-menu-close" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
  </div>
  <div class="nav-logo d-flex mx-auto mx-sm-0 order-sm-1 order-lg-2 ml-lg-0 px-xl-3 px-2 py-sm-4 py-3 py-lg-0">
    <a class="d-block" href="{{ section.settings.logo_link }}"><img style="width:{{ section.settings.logo_width }}px;" src="{{ section.settings.logo_image | img_url: 'master' }}"></a>
