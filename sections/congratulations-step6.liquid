{% if section.settings.step-6-check == true %}
<div class="congratulations-deatils con-step6 d-flex align-items-center justify-content-center hide pt-5" step="5.1">
  <div class="col-lg-4 col-md-10 col-sm-8 col-12 mx-auto">
    <h1 class="text-center fs-24 mb-4" data-name>{{ section.settings.text }}</h1>
    <div class="my-3 con-setp-6-deatils anim-bg"></div>
    <div class="my-3 con-setp-6-deatils anim-bg"></div>
    <div class="my-3 con-setp-6-deatils anim-bg"></div>
    <div class="my-3 con-setp-6-deatils anim-bg"></div>
    <div class="my-3 con-setp-6-deatils anim-bg"></div>
  </div>
</div>
<style>
  .con-step6{ min-height:  calc(100vh - 80px); }
  @media (max-width: 575px){ .con-step6{ min-height: 100%; margin-top:50px; }}
  .anim-bg {background: rgb(215,215,215);background-image: linear-gradient(43deg, rgba(215,215,215,1) 0%, rgba(255,255,255,1) 50%, rgba(215,215,215,1) 100%);background-size: 300%;
    animation: mymove 3s ease-in-out infinite;}
  
  @keyframes mymove {
    0%   {background-position: 150%;}
    50% {background-position: 0; }
    100% {background-position: 150%;}
  }
</style>
{% endif %}
