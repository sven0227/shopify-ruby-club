<div id="review" class="review-wrp py-5">
  <div class="container">
    <div class="review-title">
      <h2 class="font-lovera fs-52 text-none letter-spacing-0">{{ section.settings.rev_title }}</h2>
    </div>
    <div class="rev-cards">
      <div class="row">
        {% for block in section.blocks %}
        <div class="col-md-6 col-lg-4 mt-4 mt-md-0">
          <div class="rc-wrp py-5 px-4 bg-white">
            <div class="re-upper d-flex re-bb pb-4">
              <div class="reu-img">
                <img src="{{ block.settings.rev_img | img_url:'master' }}" class="img-fluid">
              </div>
              <div class="reu-detail ml-3">
                <h5 class="text-capitalize font-lovera rev_name d-flex align-items-center mb-1">{{ block.settings.rev_name }}<img src="{{ section.settings.varified_img | img_url:'master' }}" class="img-fluid" /></h5>
                <p class="text-capitalize mb-1 vc">{{ block.settings.sub_txt }}</p>
                <p>
                  <svg height="25" width="23" class="star rating" data-rating="1">
                    <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill-rule:nonzero;"/>
                  </svg>
                  <svg height="25" width="23" class="star rating" data-rating="1">
                    <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill-rule:nonzero;"/>
                  </svg>
                  <svg height="25" width="23" class="star rating" data-rating="1">
                    <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill-rule:nonzero;"/>
                  </svg>
                  <svg height="25" width="23" class="star rating" data-rating="1">
                    <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill-rule:nonzero;"/>
                  </svg>
                  <svg height="25" width="23" class="star rating" data-rating="1">
                    <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill-rule:nonzero;"/>
                  </svg>                 
                  
                  | <span>{{ block.settings.count_star }}5 Stars</span></p>
              </div>
            </div>
            <div class="re-middle re-bb pb-4 pb-md-0 pt-4 mb-3">
              <p>
                {{ block.settings.review_text }}
             
              </p>
            </div>
            <div class="comfort py-2 re-bb re-bb1">
              <h6 class="text-capitalize mb-1">comfort score</h6>
              <span class="position-relative dark-bar"><span class="position-absolute light-bar" style="width:{{ block.settings.comfort_per }}%"></span></span>
              <p class="d-flex justify-content-between">Low<span></span><span>High</span></p>
            </div>
            <div class="Convenience py-2 re-bb re-bb1">
              <h6 class="text-capitalize mb-1">convenience score</h6>
              <span class="position-relative dark-bar"><span class="position-absolute light-bar" style="width:{{ block.settings.con_per }}%"></span></span>
                            <p class="d-flex justify-content-between">inconvenient<span></span><span>Easy As Could Be</span></p>
            </div>
            <div class="timeline py-2 re-bb re-bb1">
              <h6 class="text-capitalize mb-1">timeliness</h6>
              <span class="position-relative dark-bar"><span class="position-absolute light-bar" style="width:{{ block.settings.time_per }}%"></span></span>
                                          <p class="d-flex justify-content-between">Late<span></span><span>Right on Time</span></p>
            </div>
            <div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    <div class="text-center mt-5">
      <a href="{{ section.settings.view_more_url }}" class="text-uppercase view-more-btn">{{ section.settings.view_more_txt }}</a>
    </div>
  </div>
</div>
<style>
  .review-wrp{background:#F5F6FD;}
  .review-title{max-width: 820px;margin: 0 auto 30px;text-align: center;}
  @media (max-width: 575px){ .review-title{ margin: 0 auto 0; } }
  .rc-wrp{border-radius:15px;}
  .re-bb{border-bottom: 1px solid #E9E9EC;}
  .reu-img {width: 90px;border-radius: 100%;overflow: hidden;}
  .rev_name{font-size:25px;letter-spacing:2.5px}
  .rev_name img{width:20px;height:20px;margin-left:10px;}
  .vc{font-size:12px;}
  .reu-detail .star polygon {fill: #ffd055;}
  .re-middle{min-height:190px;}
  .re-bb1 p{font-size:12px;}
  .dark-bar{width: 100%;height: 16px;background: #595959;border-radius: 15px;display: block;border: 1px solid #595959;}
  .light-bar{height: 13px;background: #DCDCF5;border-radius: 15px;display: block;top: 50%;left: 0;transform: translateY(-50%);}
   .view-more-btn {padding: 15px 50px;display: inline-block;background: #DAD5E7;border-radius: 10px;text-transform: uppercase;font-weight: 700;margin-bottom:10px;color:#505061;text-decoration:none;font-family: avenir;}
  a.view-more-btn:hover{text-decoration:none;}
  
  @media(max-width:1230px){
    .re-middle{min-height:240px;}
  }
  @media(max-width:991px){
     .re-middle{min-height:190px;}
    .rev-cards .row .col-md-6:nth-child(3){display:none;}
  }
  @media(max-width:767px){
     .re-middle{min-height:unset;}
    .rev-cards .row .col-md-6:nth-child(3){display:block;}
  }
</style>

